<!DOCTYPE html>
<html>
  <head>
    <title>MessageMe</title>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="ui small inverted menu">
  <div class="ui container">
  <%= link_to "Chatroom", root_url, class: "item" %>
  <a class="item">
    Messages
  </a>
  <div class="right menu">
    <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
      <div class="menu">
        <a class="item">Logout</a>
        <%= link_to "Login", login_url, class: "item" %>
        <a class="item">Sign Up</a>
      </div>
    </div>
    <div class="item">
        <%= link_to "Login", login_url, class: "ui primary button" %>
    </div>
    </div>
  </div>
</div>
<div class="ui container">
    <%= yield %>
</div>
  </body>
</html>
